<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.android.sssameeri.cargodelivery.ui.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_addOrderFragment"
            app:destination="@id/addOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/addOrderFragment"
        android:name="com.android.sssameeri.cargodelivery.ui.fragment.AddOrderFragment"
        android:label="fragment_add_order"
        tools:layout="@layout/fragment_add_order" >
        <action
            android:id="@+id/action_addOrderFragment_to_ordersListFragment"
            app:destination="@id/ordersListFragment" />
    </fragment>
    <fragment
        android:id="@+id/ordersListFragment"
        android:name="com.android.sssameeri.cargodelivery.ui.fragment.OrdersListFragment"
        android:label="fragment_orders_list"
        tools:layout="@layout/fragment_orders_list" />
    <fragment
        android:id="@+id/authFragment"
        android:name="com.android.sssameeri.cargodelivery.ui.fragment.authorizationUI.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_customerAuthFragment"
            app:destination="@id/customerAuthFragment" />
        <action
            android:id="@+id/action_authFragment_to_transporterAuthFragment"
            app:destination="@id/transporterAuthFragment" />
    </fragment>
    <fragment
        android:id="@+id/customerAuthFragment"
        android:name="com.android.sssameeri.cargodelivery.ui.fragment.authorizationUI.CustomerAuthFragment"
        android:label="fragment_customer_auth"
        tools:layout="@layout/fragment_customer_auth" />
    <fragment
        android:id="@+id/transporterAuthFragment"
        android:name="com.android.sssameeri.cargodelivery.ui.fragment.authorizationUI.TransporterAuthFragment"
        android:label="fragment_transporter_auth"
        tools:layout="@layout/fragment_transporter_auth" />
    <fragment
        android:id="@+id/activeOrdersFragment"
        android:name="com.android.sssameeri.cargodelivery.ActiveOrdersFragment"
        android:label="fragment_active_orders"
        tools:layout="@layout/fragment_active_orders" >
        <action
            android:id="@+id/action_activeOrdersFragment_to_inProcessOrdersFragment"
            app:destination="@id/inProcessOrdersFragment" />
    </fragment>
    <fragment
        android:id="@+id/inProcessOrdersFragment"
        android:name="com.android.sssameeri.cargodelivery.InProcessOrdersFragment"
        android:label="fragment_in_process_orders"
        tools:layout="@layout/fragment_in_process_orders" >
        <action
            android:id="@+id/action_inProcessOrdersFragment_to_endedOrdersFragment"
            app:destination="@id/endedOrdersFragment" />
    </fragment>
    <fragment
        android:id="@+id/endedOrdersFragment"
        android:name="com.android.sssameeri.cargodelivery.EndedOrdersFragment"
        android:label="fragment_ended_orders"
        tools:layout="@layout/fragment_ended_orders" />
</navigation>