<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:gravity="center"
    tools:context=".ui.fragment.AddOrderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        >
        <EditText
            android:id="@+id/addressFromEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Адреса відправки"
            android:layout_weight="1"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/addressToEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Адреса доставки"
            android:layout_weight="1"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        >
        <EditText
            android:id="@+id/cityFromEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Місто відправки"
            android:layout_weight="1"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/cityToEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Місто доставки"
            android:layout_weight="1"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        >
        <EditText
            android:id="@+id/dateStartEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Дата відправки"
            android:layout_weight="1"
            android:inputType="date"
            />

        <EditText
            android:id="@+id/dateEndEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Дата доставки"
            android:layout_weight="1"
            android:inputType="date"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/orderDescriptionEditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Короткий опис"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/orderTransportSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/createOrderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_order"
        />

</LinearLayout>